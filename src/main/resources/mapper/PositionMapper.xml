<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qexz.dao.PositionMapper" >
    <resultMap id="BaseResultMap" type="com.qexz.model.Position" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="question_num" property="questionNum" jdbcType="INTEGER" />
        <result column="img_url" property="imgUrl" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <sql id="Base_Column_List" >
        id,`name`,question_num,img_url,state,create_time,update_time
    </sql>

    <insert id="insertPosition" parameterType="com.qexz.model.Position" >
        insert into t_position
        (name, question_num, img_url)
        values (#{position.name}, #{position.questionNum}, #{position.imgUrl})
    </insert>

    <update id="updatePositionById" parameterType="com.qexz.model.Position">
        UPDATE t_position
        SET
        name = #{position.name}, question_num = #{position.questionNum},
        img_url = #{position.imgUrl}
        WHERE
        id = #{position.id}
    </update>

    <select id="getPositionById" resultMap="BaseResultMap" parameterType="int" >
        SELECT
        *
        FROM t_position
        WHERE id = #{id}
    </select>

    <select id="getCount" resultType="int">
        SELECT
        COUNT(1)
        FROM t_position
    </select>

    <select id="getPositions" resultMap="BaseResultMap" >
        SELECT
        *
        FROM t_position
    </select>

    <delete id="deletePositionById" parameterType="int">
        DELETE FROM t_position
        where id = #{id}
    </delete>
</mapper>